<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_holder_comics_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comics_item_height"
    android:layout_marginBottom="@dimen/comics_item_top_bottom_margins"
    android:layout_marginTop="@dimen/comics_item_top_bottom_margins"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/fragment_image_view_image_comics"
        android:layout_width="@dimen/comics_item_image_width"
        android:layout_height="@dimen/comics_item_image_height"
        android:layout_marginLeft="@dimen/comics_item_image_margins"
        android:layout_marginRight="@dimen/comics_item_image_margins" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/fragment_text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fragment_text_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_text_view_pagecount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>